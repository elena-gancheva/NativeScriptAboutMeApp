            <Label text="javaScript" cssClass="skills-label" />
            <Label text="ES2015" cssClass="skills-label" />
            <Label text="jQuery" cssClass="skills-label" />
            <Label text="New in NativeScript :)" cssClass="skills-label" />
            <Label text="New in Angular 2 :)" cssClass="skills-label" />
            <Label text="New in React js :)" cssClass="skills-label" />
            <Label text="HTML" cssClass="skills-label" />
            <Label text="CSS" cssClass="skills-label" />
            <Label text="UX design" cssClass="skills-label" />
            <Label text="Responsive design" cssClass="skills-label" />
            <Label text="Photoshop" cssClass="skills-label" />
            <Label text="Not my favourite but.. C#" cssClass="skills-label" />
        </StackLayout> 
    </ScrollView>
