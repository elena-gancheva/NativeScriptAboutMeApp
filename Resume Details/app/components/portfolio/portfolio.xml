           <ActionBar.titleView>
                <Label text="Portfolio" cssClass="custom-action-bar" id="title"/>
            </ActionBar.titleView>
        </action-bar>
    </page.actionBar>
    <ScrollView>
        <StackLayout orientation="vertical">
      		<Label text="Skills Lables" cssClass="main-skills-label" />
